<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            app:titleTextColor="#1B5E20"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_leaf"
                    app:tint="#4CAF50"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plate for the Planet"
                    android:textSize="18sp"
                    android:textColor="#1B5E20"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/ivNotification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    app:tint="#666666"
                    android:layout_marginEnd="16dp"/>

<!--                <ImageView-->
<!--                    android:id="@+id/ivProfile"-->
<!--                    android:layout_width="32dp"-->
<!--                    android:layout_height="32dp"-->
<!--                    android:src="@drawable/ic_profile"-->
<!--                    app:tint="#666666"/>-->
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:paddingBottom="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E8F5E9"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome,"
                        android:textSize="16sp"
                        android:textColor="#2E7D32"/>

                    <TextView
                        android:id="@+id/tvCharityName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hope Community Kitchen"
                        android:textSize="24sp"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find and reserve surplus food to help your community"
                        android:textSize="14sp"
                        android:textColor="#388E3C"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Browse Food Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBrowseFood"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Browse Food"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:icon="@drawable/ic_food"
                    app:iconTint="#FFFFFF"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"/>

                <!-- My Reservations Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMyReservations"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Reservations"
                    android:textSize="16sp"
                    android:textColor="#2196F3"
                    app:icon="@drawable/ic_reservation"
                    app:iconTint="#2196F3"
                    app:backgroundTint="#E3F2FD"
                    app:cornerRadius="12dp"
                    app:strokeColor="#2196F3"
                    app:strokeWidth="1dp"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <!-- Search Bar -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#E0E0E0"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="#666666"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search food items or sellers..."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Filter Chips -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter by Category"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- In your layout.xml -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filterDropdownLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:startIconDrawable="@drawable/ic_filter"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxBackgroundColor="@color/white">

                <AutoCompleteTextView
                    android:id="@+id/categoryAutoComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="All"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Food Listings Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Food Listings"
                    android:textSize="18sp"
                    android:textColor="#1B5E20"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvListingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 listings"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

            </LinearLayout>

            <!-- Food Listings Container -->
            <LinearLayout
                android:id="@+id/llListingsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Sample Listing 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Food Info Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <!-- Food Image -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F5F5F5"
                                android:layout_marginEnd="16dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:src="@drawable/ic_vegetables"
                                        app:tint="#4CAF50"/>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Food Details -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fresh Vegetable Salad Mix"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vegetables • 5 kg"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="8dp"/>

                                <!-- Restaurant Info -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_store"
                                        app:tint="#FF9800"
                                        android:layout_marginEnd="4dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Green Leaf Restaurant"
                                        android:textSize="12sp"
                                        android:textColor="#666666"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Time and Expiry Info -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <!-- Pickup Time -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_time"
                                    app:tint="#2196F3"
                                    android:layout_marginEnd="4dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pickup: 18:00-20:00"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                            <!-- Expiry Date -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="#FF9800"
                                    android:layout_marginEnd="4dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Expires 2025-12-17"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Reserve Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnReserve1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Reserve Now"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            app:backgroundTint="#4CAF50"
                            app:cornerRadius="8dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Sample Listing 2 (Bakery) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Food Info Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <!-- Food Image -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F5F5F5"
                                android:layout_marginEnd="16dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:src="@drawable/ic_bakery"
                                        app:tint="#FF9800"/>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Food Details -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Assorted Pastries"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="4dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bakery • 25 pieces"
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="8dp"/>

                                <!-- Restaurant Info -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_store"
                                        app:tint="#FF9800"
                                        android:layout_marginEnd="4dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sunshine Bakery"
                                        android:textSize="12sp"
                                        android:textColor="#666666"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Time and Expiry Info -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <!-- Pickup Time -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_time"
                                    app:tint="#2196F3"
                                    android:layout_marginEnd="4dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pickup: 09:00-17:00"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                            <!-- Expiry Date -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="#FF9800"
                                    android:layout_marginEnd="4dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Expires 2025-12-18"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Reserve Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnReserve2"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Reserve Now"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            app:backgroundTint="#4CAF50"
                            app:cornerRadius="8dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Add more sample listings as needed -->

            </LinearLayout>

            <!-- Empty State -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEmptyState"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_empty_food"
                        app:tint="#BDBDBD"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Food Available"
                        android:textSize="18sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check back later for new food listings"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add bottom padding for better scrolling -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav"
        app:itemIconTint="@color/bottom_nav_colors"
        app:itemTextColor="@color/bottom_nav_colors"
        app:labelVisibilityMode="labeled"
        android:elevation="8dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>