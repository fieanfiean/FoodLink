                                android:layout_height="wrap_content"
                                android:text="+1 234 567 8900"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginTop="2dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
