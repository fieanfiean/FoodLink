<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F9F0"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:layout_gravity="center"
                app:tint="#2E7D32"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvBackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            android:layout_marginStart="8dp"/>

        <!-- Branding Section -->
        <LinearLayout
            android:id="@+id/llBranding"
            android:layout_width="0dp"
            android:layout_height="148dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <!-- Logo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_leaf"
                    app:tint="#FFFFFF"
                    android:background="@drawable/circle_green_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plate for the Planet"
                    android:textSize="24sp"
                    android:textColor="#1B5E20"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Our Mission"
                android:textSize="20sp"
                android:textColor="#1B5E20"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Help reduce food waste and support communities. Create your account and start making a difference today."
                android:textSize="16sp"
                android:textColor="#2E7D32"
                android:gravity="center"
                android:maxWidth="400dp"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>

        <!-- Steps Section -->
        <LinearLayout
            android:id="@+id/llSteps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/llBranding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/circle_green_bg"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Your Role"
                        android:textColor="#1B5E20"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select whether you're a food seller or charity organization"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/circle_green_bg"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete Your Profile"
                        android:textColor="#1B5E20"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provide your organization details and contact information"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Step 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/circle_green_bg"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Making Impact"
                        android:textColor="#1B5E20"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List surplus food or reserve donations to help your community"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Sign Up Form Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/llSteps"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:textSize="24sp"
                    android:textColor="#1B5E20"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- Role Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am a: *"
                    android:textColor="#2E7D32"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- Seller Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSeller"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        android:background="@drawable/card_selector"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/ivSeller"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_store"
                                app:tint="#666666"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seller"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Restaurant/Store"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Charity Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCharity"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        android:background="@drawable/card_selector"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/ivCharity"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_heart"
                                app:tint="#666666"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Charity"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Non-profit Org"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Business/Organization Name -->
                <TextView
                    android:id="@+id/tvNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Name *"
                    android:textColor="#2E7D32"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="e.g., Green Leaf Restaurant"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address *"
                    android:textColor="#2E7D32"
                    android:textSize="14sp"
                    android:layout_marginBottom="8px"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="your@email.com"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Phone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number *"
                    android:textColor="#2E7D32"
                    android:textSize="14sp"
                    android:layout_marginBottom="8px"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="+1 234 567 8900"
                    android:inputType="phone"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address *"
                    android:textColor="#2E7D32"
                    android:textSize="14sp"
                    android:layout_marginBottom="8px"/>

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Enter your full address"
                    android:inputType="textMultiLine"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="top"
                    android:layout_marginBottom="16dp"/>

                <!-- Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password *"
                    android:textColor="#2E7D32"
                    android:textSize="14sp"
                    android:layout_marginBottom="8px"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Create a strong password"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Confirm Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password *"
                    android:textColor="#2E7D32"
                    android:textSize="14sp"
                    android:layout_marginBottom="8px"/>

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Re-enter your password"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Terms Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E8F5E9"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="By creating an account, you agree to our Terms of Service and Privacy Policy. You're joining a community dedicated to reducing food waste and supporting SDG 12."
                        android:textSize="12sp"
                        android:textColor="#2E7D32"
                        android:padding="16dp"/>

                </androidx.cardview.widget.CardView>

                <!-- Create Account Button -->
                <Button
                    android:id="@+id/btnCreateAccount"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Create Account"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="#4CAF50"
                    android:stateListAnimator="@null"/>

                <!-- Already have account -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/tvSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>