<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Food Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Food Image/Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F5F5F5"
                android:layout_marginEnd="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Main Food Image (loaded from Base64) -->
                    <ImageView
                        android:id="@+id/ivFoodImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                    <!-- Fallback Food Icon (shown when no image) -->
                    <ImageView
                        android:id="@+id/ivFoodIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_food"
                        app:tint="#4CAF50"/>

                    <!-- "No Image" Text (optional) -->
                    <TextView
                        android:id="@+id/tvNoImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Image"
                        android:textSize="10sp"
                        android:textColor="#666666"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Food Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvFoodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvCategoryQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category â€¢ Quantity"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp"/>

                <!-- Restaurant Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_store"
                        app:tint="#FF9800"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/tvRestaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restaurant Name"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Time and Expiry Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Pickup Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_time"
                    app:tint="#2196F3"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvPickupTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup: N/A"
                    android:textSize="12sp"
                    android:textColor="#666666"/>

            </LinearLayout>

            <!-- Expiry Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#FF9800"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvExpiryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expires: N/A"
                    android:textSize="12sp"
                    android:textColor="#666666"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- View Details Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="View Details"
                android:textSize="16sp"
                android:textColor="#2196F3"
                app:backgroundTint="#FFFFFF"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"/>

            <!-- Reserve Now Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReserve"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reserve Now"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="#4CAF50"
                app:cornerRadius="8dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>