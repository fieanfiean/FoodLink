<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Food Image or Placeholder -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F5F5F5"
            android:layout_marginEnd="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- ImageView for loaded image -->
                <ImageView
                    android:id="@+id/ivFoodImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                android:src="@drawable/ic_food"
                android:contentDescription="Food image" />

                <!-- "No Image" text -->
                <TextView
                    android:id="@+id/tvNoImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Image"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:layout_gravity="center"
                    android:visibility="visible"/> <!-- Initially visible -->

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Food Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Title and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvFoodName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Food Name"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:background="@drawable/status_available_bg"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"/>

            </LinearLayout>

            <!-- Food Type and Quantity -->
            <TextView
                android:id="@+id/tvCategoryQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category â€¢ Quantity"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"/>

            <!-- Expiry and Pickup -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"> <!-- Added small space below -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#FF9800"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:id="@+id/tvExpiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiry: 2025-12-17"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>


<!--                <View-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="0dp"-->
<!--                    android:layout_weight="1"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_time"
                        app:tint="#2196F3"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:id="@+id/tvPickupTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup: 18:00 - 20:00"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:textSize="12sp"
                    app:backgroundTint="#E3F2FD"
                    app:cornerRadius="8dp"
                    app:strokeColor="#2196F3"
                    app:strokeWidth="1dp"
                    android:textColor="#2196F3"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAction"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Mark Reserved"
                    android:textSize="12sp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="8dp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>