<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Status Badge - Top Right -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPCOMING"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_status_upcoming"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp" />

        <!-- Main Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:paddingBottom="12dp">

            <!-- Main Content Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="12dp">

                <!-- Image Section (Left) -->
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@color/gray_light"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/ivFoodImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="Food Image" />

                    <TextView
                        android:id="@+id/tvNoImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Image"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <!-- Details Section (Right) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Food Item -->
                    <TextView
                        android:id="@+id/tvFoodItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assorted Fresh Bread"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4dp" />

                    <!-- Restaurant -->
                    <TextView
                        android:id="@+id/tvRestaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunrise Bakery"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp" />

                    <!-- Details Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical">

                        <!-- Quantity -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_quantity"
                                app:tint="#757575" />

                            <TextView
                                android:id="@+id/tvQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20 loaves"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>

                        <!-- Pickup Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_time"
                                app:tint="#757575" />

                            <TextView
                                android:id="@+id/tvPickupTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pickup: 19:00-21:00"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Expiry Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#757575" />

                        <TextView
                            android:id="@+id/tvExpiryDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expires: 2025-12-17"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" />

            <!-- ====== ACTION BUTTONS SECTION ====== -->
            <LinearLayout
                android:id="@+id/llActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

            <!-- Cancel Reservation Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelReservation"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancel Reservation"
                android:textColor="@android:color/white"
                app:backgroundTint="#F44336"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"
                app:strokeColor="#F44336"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- Confirm Pickup Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmPickup"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Confirm Pickup"
                android:textColor="@android:color/white"
                app:backgroundTint="#4CAF50"
                android:layout_marginStart="8dp"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>
        <!-- ====== END ACTION BUTTONS SECTION ====== -->

        <!-- ====== COMPLETED ACTIONS SECTION ====== -->
        <LinearLayout
            android:id="@+id/llCompletedActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:visibility="gone">

        <!-- View Details Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewDetails"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="View Details"
            android:textColor="@android:color/white"
            app:backgroundTint="#2196F3"
            android:layout_marginEnd="8dp"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Reorder Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReorder"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Reorder"
            android:textColor="@android:color/white"
            app:backgroundTint="#FF9800"
            android:layout_marginStart="8dp"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>
    <!-- ====== END COMPLETED ACTIONS SECTION ====== -->

</LinearLayout>
    </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>